<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.UpdateAdminPage"
             Title="Udpate">
    
    <StackLayout>
        <Frame BackgroundColor="LightGray"  Padding="10" >
            <Label Text="MetaMaze"  TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </Frame>

        <Label Text="Wpisz nowego Administartora:" TextColor="Black" FontSize="12" ></Label>
        <Entry x:Name="IdupAdmin" Placeholder="Wprowadz id administartoranp(1,2):" FontSize="Small"></Entry>
        <Entry x:Name="Nazwisko_imie" Placeholder="Imie Nazwisko" FontSize="Small"></Entry>
        <Entry x:Name="EmailAdmin" Placeholder="Email" FontSize="Small"></Entry>
        <Entry x:Name="Zacoodpowiada" Placeholder="Za co odpowiada" FontSize="Small"></Entry>
        
        <Button Text="Update" Clicked="UpdateAdmin_Clicked" ></Button>
        
    </StackLayout>

   

</ContentPage>