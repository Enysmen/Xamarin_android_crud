<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ZakazyPage">

    <StackLayout>
        <Frame BackgroundColor="LightGray"  Padding="10" >
            <Label Text="MetaMaze"  TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </Frame>


        <ListView x:Name="lstZakazy">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Numer_zakazu}" FontSize="Small" ></Label>
                            <Label Text="{Binding Ilie_kosztowal}" FontSize="Small" ></Label>
                            <Label Text="{Binding Co_zakazano}" FontSize="Small" ></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        
        
        
    </StackLayout>

    <ContentPage.ToolbarItems>
        
        <ToolbarItem Text="Add" Clicked="AddZakazy_Clicked"></ToolbarItem>
        <ToolbarItem Text="Update" Clicked="UpdateZakazy_Clicked"></ToolbarItem>
        <ToolbarItem Text="Delete" Clicked="DeleteZakazy_Clicked"></ToolbarItem>
        
    </ContentPage.ToolbarItems>
  
    
    
    
</ContentPage>