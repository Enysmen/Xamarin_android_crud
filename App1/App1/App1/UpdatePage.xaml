            <Label Text="MetaMaze"  TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
        </Frame>
        
        <Label Text="Jaki Pracownik np: Pracownik1:" TextColor="Black" FontSize="12" ></Label>
        <Entry x:Name="nameup" Placeholder="" FontSize="Small" ></Entry>

        <Label Text="Wszystko dla Pracownika:" TextColor="Black" FontSize="12" ></Label>
        <Entry x:Name="EmailADup" Placeholder="Email" FontSize="Small" ></Entry>
        <Entry x:Name="Imie_Nazwiskoup" Placeholder="Imie Nazwisko" FontSize="Small" ></Entry>
        <Entry x:Name="Kim_pracujeup" Placeholder="Kim pracuje w firmie" FontSize="Small"  ></Entry>


